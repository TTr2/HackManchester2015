<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".SheepOrShephard"
    android:background="@drawable/sheep">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sheep"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:textStyle="bold"
		android:id="@+id/sheepButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sheep or a Shepherd?"
        android:textStyle="bold"
        android:textColor="#FFFF00"
        android:background="#999999"
        android:id="@+id/textView2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_alignRight="@+id/shephardButton"
        android:layout_alignEnd="@+id/shephardButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shepherd"
        android:id="@+id/shephardButton"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:textStyle="bold"
		android:layout_marginBottom="71dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/sheepButton"
        android:layout_alignStart="@+id/sheepButton"
        android:clickable="true" />

</RelativeLayout>
