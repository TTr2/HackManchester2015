<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tightcoupled.flockbuddy" >

    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SheepOrShephard"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SheepTrackingEnabler"
            android:label="@string/title_activity_sheep_tracking_enabler" >
        </activity>
        <activity
            android:name=".ShephardFlockManager"
            android:label="@string/title_activity_shephard_flock_manager" >
        </activity>
        <activity
            android:name=".FlockCreation"
            android:label="@string/title_activity_flock_creation" >
        </activity>
        <activity
            android:name=".FlockManagement"
            android:label="@string/title_activity_flock_management" >
        </activity>
        <activity
            android:name=".flockList"
            android:label="@string/title_activity_flock_list" >
        </activity>
        <activity
            android:name=".FlockSheepList"
            android:label="@string/title_activity_flock_sheep_list" >
        </activity>
        <activity
            android:name=".SheepAdditionScreen"
            android:label="@string/title_activity_sheep_addition_screen" >
        </activity>
    </application>

</manifest>
